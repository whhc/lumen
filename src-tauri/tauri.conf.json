{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lumen",
  "version": "0.1.0",
  "identifier": "com.gaoguixi.lumen",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "lumen",
        "minWidth": 1200,
        "minHeight": 800,
        "fullscreen": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "window": {
      "allow": [
        {
          "identifier": "main",
          "permissions": [
            "allow-close"
          ]
        },
        {
          "identifier": "media-*",
          "permissions": [
            "allow-close",
            "allow-create"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}